extends layout

include mixins/_productCard
block content 
  .inner 
    h2 #{tag || 'Categories'}
    ul.tags 
      each t in tags 
        li.tag 
          a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
            span.tag__text= t._id 
            span.tag__count= t.count
    
    //-pre=h.dump(products)
    .stores
      each product in products 
        +productCard(product)