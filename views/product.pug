extends layout

block content
  //-pre= h.dump(product)
  .single
    .single__hero
      img.single__image(src=`/uploads/${product.photo || 'store.jpg'}`)
      h2.title.title--single
        a(href=`#`) #{product.name}

  .single__details.inner
    img.single__map(src=h.staticMap(product.location.coordinates))
    p.single__location= product.location.address
    p.single__price= `Price: $ ${product.price}`
    p= product.description


    if product.tags
      ul.tags
        each tag in product.tags
          li.tag
            a.tag__link(href=`/tags/${tag}`)
              span.tag__text ##{tag}

